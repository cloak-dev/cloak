{
    "name": "Cloak",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "assets/16.png",
        "32": "assets/32.png",
        "48": "assets/48.png",
        "128": "assets/128.png"
    },
    "action": {},
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab", "scripting"],
    "web_accessible_resources": [
        {
            "resources": ["scripts/basic.js", "assets/logo.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
